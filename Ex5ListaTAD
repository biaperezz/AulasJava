5- Crie uma classe Principal que permita testar as classes Lista, Pilha e Fila com um menu interativo.

package PilhaEx;

import java.util.Scanner;
import java.lang.NumberFormatException;

public class Principal {

    private static final Scanner scanner = new Scanner(System.in);
    private static final ListaSimples lista = new ListaSimples();
    private static final Pilha pilha = new Pilha();
    private static final Fila fila = new Fila();

    public static void main(String[] args) {
        int opcao;

        do {
            exibirMenuPrincipal();
            opcao = lerValorInt();

            switch (opcao) {
                case 1:
                    menuLista();
                    break;
                case 2:
                    menuPilha();
                    break;
                case 3:
                    menuFila();
                    break;
                case 0:
                    System.out.println("\nPrograma encerrado. Ate mais!");
                    break;
                default:
                    if (opcao != -1) {
                        System.out.println("\nOpcao invalida. Tente novamente.");
                    }
            }
        } while (opcao != 0);

        scanner.close();
    }

    private static void exibirMenuPrincipal() {
        System.out.println("\n==================================");
        System.out.println("       TESTE DE ESTRUTURAS        ");
        System.out.println("==================================");
        System.out.println("1. Testar Lista Simples (Max 5)");
        System.out.println("2. Testar Pilha (Max 5)");
        System.out.println("3. Testar Fila (Max 5)");
        System.out.println("0. Sair");
        System.out.print("Escolha uma opcao: ");
    }

    private static int lerValorInt() {
        try {
            String input = scanner.nextLine();
            return Integer.parseInt(input);
        } catch (NumberFormatException e) {
            return -1;
        }
    }

    private static void menuLista() {
        int opcao;
        do {
            System.out.println("\n--- MENU LISTA ---");
            System.out.println("1. Inserir elemento");
            System.out.println("2. Remover elemento (por indice)");
            System.out.println("3. Exibir Lista");
            System.out.println("0. Voltar");
            System.out.print("Escolha uma opcao: ");
            
            opcao = lerValorInt();
            
            switch (opcao) {
                case 1:
                    System.out.print("Digite o valor a inserir: ");
                    int valorInserir = lerValorInt();
                    if (valorInserir != -1) {
                        lista.inserir(valorInserir);
                    }
                    break;
                case 2:
                    if (lista.getTamanho() > 0) {
                        System.out.print("Digite o indice a remover (0 a " + (lista.getTamanho() - 1) + "): ");
                        int indice = lerValorInt();
                        if (indice != -1) {
                            int valorRemovido = lista.removerPorIndice(indice);
                            if (valorRemovido != -1) {
                                System.out.println("-> Elemento removido: " + valorRemovido);
                            } else {
                                System.out.println("Indice invalido ou Lista vazia.");
                            }
                        }
                    } else {
                        System.out.println("Lista vazia. Nao ha o que remover.");
                    }
                    break;
                case 3:
                    lista.mostrar();
                    break;
                case 0:
                    break;
                default:
                    if (opcao != -1) {
                        System.out.println("Opcao invalida.");
                    }
            }
        } while (opcao != 0);
    }

    private static void
